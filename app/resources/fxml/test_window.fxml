<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.TestWindowController" spacing="10" prefWidth="520">
    <padding><Insets topRightBottomLeft="16"/></padding>

    <Label text="Enter LaTeX (JLaTeXMath):"/>
    <TextField fx:id="latexField" promptText="e.g. \int_0^{\pi} \sin x \, dx" onAction="#render"/>

    <HBox spacing="10">
        <Button text="Render" onAction="#render"/>
        <Label fx:id="statusLabel" textFill="#777777"/>
    </HBox>

    <Separator/>

    <Label text="Result:"/>
    <!-- We'll put an ImageView inside this Label as its graphic -->
    <Label fx:id="outputLabel"/>
</VBox>
